 

  
@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Edit Application Role";
}

<h2><i class="fa fa-pencil-square-o"></i> @ViewBag.Title.</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("Edit", "Role", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "EditRoleForm", @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Edit application role.</h4>
                <hr />
                @Html.HiddenFor(model => model.id)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Role Name", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Save" />
                        @Html.ActionLink("Cancel", "Index", "Role", new { @class = "btn btn-primary " })
                    </div>
                </div>


            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        var form = $("#EditRoleForm");
        form.submit(function (event) {
            var role = $("#Name").val();
            if (!role) { 
                event.preventDefault();
                toastr.error("Please enter role name.");
            }
        });
    </script>
}