@if (Request.IsAuthenticated)
{
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 ">
        <aside id="tg-sidebar" class="dashboard-sidebar">
            <div class="tg-widget tg-widget-accordions">
                <h3>Dashboard</h3>
                <ul class="docdirect-menu">
                    <li class="active"><a href="@Url.Action("AppointmentList", "Visitor")">Appoinments</a></li>
                    <li class=""><a href="@Url.Action("Index", "Manage")">Profile Settings</a></li>
                    <li class=""><a href="@Url.Action("ChangePassword", "Manage")">Security Settings</a></li>
                    <li class=""><a href="@Url.Action("ManageLogins", "Manage")">External Login</a></li>
                    <li>
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
                        {
                            @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-in"></i>Logout</a>
                        }
                    </li>
                </ul>
            </div>
        </aside>
    </div>
}
